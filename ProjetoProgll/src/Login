import javax.swing.*;
import javax.awt.*;

public class Login extends JFrame {
    final private Font mainFont = new Font("Segoe print", Font.BOLD, 18);
    JTextField tfEmail;
    public void initialize() {
        JLabel IbloginForm = new JLabel("Pagina de loge", SwingConstants.CENTER);
